!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %title Mandelbrot
    %link{:href => "https://fonts.googleapis.com/css?family=Exo+2", :rel => "stylesheet"}/
  %body#overflow
    %canvas#canvas

    .controls
      #pure_mandelbrot.button-ctrl.color
        = t('main.mandelbrot.monochrome')
      #BW.button-ctrl.color
        = t('main.mandelbrot.BW')
      #BW_recursive.button-ctrl.color
        = t('main.mandelbrot.BW_recursive')
      #sunshine.button-ctrl.color
        = t('main.mandelbrot.sunshine')
      #inferno.button-ctrl.color
        = t('main.mandelbrot.inferno')
      #inferno_recursive.button-ctrl.color
        = t('main.mandelbrot.inferno_recursive')
      #gothic.button-ctrl.color
        = t('main.mandelbrot.gothic')
      #gothic_recursive.button-ctrl.color
        = t('main.mandelbrot.gothic_recursive')
      #flame.button-ctrl.color
        = t('main.mandelbrot.flame')
      #l_in_d.button-ctrl.color
        = t('main.mandelbrot.l_in_d')
      #acid.button-ctrl.color
        = t('main.mandelbrot.acid')
      .button-ctrl.iteration
        %span#iterations
          = t('main.mandelbrot.iterations')
        %br/
        %input#iteration_button{:max => "3000", :min => "50", :name => "points",  :type => "range", :value => "50"}/
      #final.button-ctrl.render_save
        = t('main.mandelbrot.final')
      #save.button-ctrl.render_save
        = t('main.mandelbrot.save')
    #places
      #star.button-ctrl.place
        = t('main.mandelbrot.star')
      #tornado.button-ctrl.place
        = t('main.mandelbrot.tornado')
      #satellite.button-ctrl.place
        = t('main.mandelbrot.satellite')
      #valley1.button-ctrl.place
        = t('main.mandelbrot.valley1')
      #valley2.button-ctrl.place
        = t('main.mandelbrot.valley2')
      %br/
      .place
        = 'Shift+click to remote'
      %br/
      #burning_ship.button-ctrl.place
        = t('main.mandelbrot.burning_ship')

    = javascript_pack_tag 'mandelbrot', 'data-turbolinks-track': 'reload'
